<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_search_tag_default"
        android:key="@string/settings_search_tag_key"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        android:title="@string/settings_search_tag_label" />

    <ListPreference
        android:defaultValue="@string/settings_section_default"
        android:entries="@array/settings_sections_labels"
        android:entryValues="@array/settings_sections_values"
        android:key="@string/settings_section_key"
        android:title="@string/settings_section_label"/>

</PreferenceScreen>